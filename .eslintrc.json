{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true,
        "jquery": true
    },
    "globals": {
        "app": "readonly",
        "loadScript": "readonly",
        "verseListTemplate": "readonly",
        "ipcNsi": "readonly",
        "ipcSettings": "readonly",
        "ipcDb": "readonly",
        "ipcGeneral": "readonly",
        "app_controller": "readonly",
        "tags_controller": "readonly",
        "theme_controller": "readonly",
        "uiHelper": "readonly",
        "i18n": "readonly",
        "platformHelper": "readonly"
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "indent": ["warn", 2],
        // "quotes": ["warn", "single"], // commented because of to many errors
        "semi": ["warn", "always"],
        "no-unused-vars": "warn",
        "no-redeclare": "warn",
        "block-scoped-var": "warn"
    }
}
