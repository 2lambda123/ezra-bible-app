# Dockerfile for OpenSuse Build Enviroment for Ezra Project

FROM opensuse/leap:15.1

ARG HOST_USER

RUN zypper --gpg-auto-import-keys refresh

RUN zypper install -y sudo gcc-c++ make vim git subversion cmake nodejs npm rpm-build
RUN zypper install -y libcurl-devel libicu-devel sqlite3-devel unzip

RUN npm install -g https://github.com/tobias-klein/electron-installer-redhat.git

RUN useradd -ms /bin/bash $HOST_USER
